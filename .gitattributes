# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text diff=python

# Documentation files
*.md text
*.txt text
*.rst text

# Configuration files
*.yml text
*.yaml text
*.json text
*.env text
*.ini text
*.cfg text
*.conf text

# Docker files
Dockerfile text
docker-compose.yml text
.dockerignore text

# Git files
.gitignore text
.gitattributes text

# License
LICENSE text

# Requirements
requirements.txt text

# Shell scripts
*.sh text eol=lf

# Batch files
*.bat text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.exe binary
*.dll binary
*.so binary

# Log files
*.log text

# Database files
*.db binary
*.sqlite binary
*.sqlite3 binary

# Archive files
*.zip binary
*.tar binary
*.gz binary
*.rar binary
*.7z binary

# Executable files
*.exe binary
*.msi binary
*.deb binary
*.rpm binary
*.dmg binary
*.pkg binary

# Media files
*.mp3 binary
*.mp4 binary
*.avi binary
*.mov binary
*.wav binary
*.flac binary

# Font files
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary

# Certificate files
*.pem text
*.crt text
*.key text
*.p12 binary
*.pfx binary

# Large files (use Git LFS)
*.psd filter=lfs diff=lfs merge=lfs -text
*.ai filter=lfs diff=lfs merge=lfs -text
*.sketch filter=lfs diff=lfs merge=lfs -text
